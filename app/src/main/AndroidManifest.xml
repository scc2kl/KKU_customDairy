<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.khj.customdiary">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Activity.IntroMain"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activity.DiaryIndexMain"
            android:configChanges="orientation|screenSize"
            android:launchMode="singleTask"></activity>
        <activity
            android:name=".Activity.CategoryMain"
            android:configChanges="orientation|screenSize"
            android:launchMode="singleTask"></activity>

        <activity
            android:name=".Activity.SettingMain"
            android:configChanges="orientation|screenSize"
            android:launchMode="singleTask"></activity>
        <activity
            android:name=".Activity.CalendarMain"
            android:configChanges="orientation|screenSize"
            android:launchMode="singleTask"></activity>
        <activity
            android:name=".Activity.MemoMain"
            android:configChanges="orientation|screenSize"
            android:launchMode="singleTask"></activity>
    </application>

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

</manifest>